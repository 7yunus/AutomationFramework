<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" parallel="tests" thread-count="4" data-provider-thread-count="4">
    <test name="UITestChrome">

        <!--
                    If you want to run tests on cross browsers in parallel on remote, start selenium grid locally w/o docker
                    first and then run tests using this xml file or change the parameter value to chrome and firefox to run on
                    local machine
        -->
        <parameter name="browser" value="remote-chrome"/>
        <classes>
            <class name="org.example.sedin.runner.cross_browser.CrossBrowserParallelRunner"/>
        </classes>
    </test>
    <test name="UITestFirefox">
        <parameter name="browser" value="remote-firefox"/>
        <classes>
            <class name="org.example.sedin.runner.cross_browser.CrossBrowserParallelRunner"/>
        </classes>
    </test>
</suite>

